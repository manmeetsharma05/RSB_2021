<script>
    $(document).ready(function () {

        var date_input = $('input[name="Date_of_Published"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        var options = {
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            changeYear: true,
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })
</script>

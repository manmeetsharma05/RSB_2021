@model Rajya_Sanik_Board.Models.Generalform
@{
    ViewBag.Title = "shortDistrictReport";
    Layout = "";
}


<style>
    .table-condensed tr th span {
	width: 100%;
	display: inline-block;
	font-size: 14px;
}
    .table-condensed tbody tr th:last-child {
	width: 23%;
}
    table, th, td {

    border: 1px solid black;
    border-collapse: collapse;
    padding: 5px !important;
    text-align: left;
    font-size: 14px;

}
 .cus-army-no-field span {
    width: 100%;

}
.cus-tr .cus-army-no-field:last-child span:empty {
    display: none !important;
}
</style>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jQuery.print.js"></script>
<div id="maindiv" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 cus-grid-tables">

    <div id="no-more-tables" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive cus-summary-report" style="padding: 15px 0;">
       
          
        <table class="col-md-12 table-bordered table-striped table-condensed cf" id="t02" style="width: 100%; padding: 0">
                          
            <tbody style="width: 100%; display: inline-table;">

                        <tr>
                              <td colspan="10" style="background: #fff;">
                                 <img src="@Url.Content("../img/rsb-header.png")" alt="" style="height: 100px;">
                               </td>
                           </tr>
                <tr style="background:#DA251C;color:#fff;">
                        <th>S.No</th> 
                                                
                        <th><span>Army Number</span></th> 
                         
                         <th> <span>Rank</span></th> 
                    <th> <span>Name</span></th>  
                     <th> <span>Address</span></th>
                    <th> <span>Mobile Number</span></th>                     
                     <th> <span>ESMIdentity Card Number</span></th>  
                                         
                        
                        
                          </tr>   
                   
                    
                       
              
                    
                      
                       
                @{var counter = 0;}
                @{foreach (var item in ViewBag.shortreport)
                  {
                      counter = counter + 1;

                     
                                   
                    <tr class="cus-tr">
                        
                        
                        <td>@counter</td>
                        
                       <td class="cus-army-no-field"><span>@item.Army_No</span> </td>
                        <td class="cus-army-no-field"><span>@item.Rank_Type  </span></td> 
                        <td class="cus-army-no-field"><span>@item.Sanik_Name_eng</span> </td>
                        <td class="cus-army-no-field"><span>@item.Per_address_eng  </span><span> @item.Per_Landmark_english </span><span> @item.StateName </span><span> @item.VNAME  @item.townname</span> <span> @item.Pin_code </span> </td>
                        <td class="cus-army-no-field"><span>@item.mobileno  </span></td>                         
                        <td class="cus-army-no-field"><span>@item.ESMIdentitycardnumber</span> </td>
                                                      
                         
                                                   
                       
                        
                                                             
                                      
                   
                </tr>@*
                    <tr>
                    <td colspan="6" style="background:#fff;padding:2px;"></td>
                        </tr>*@
                  }}

               
                </tbody>
        </table>
           
       
    </div>
               
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 w3-container w3-border city">
    <div class="col-lg-3 col-md-5 col-sm-6 col-xs-12 cus-print-link mobile-pull army-no form-group">        


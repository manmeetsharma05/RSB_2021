@model Rajya_Sanik_Board.Models.Generalform

@{
    ViewBag.Title = "Edit Schemes";
    Layout = "~/Views/Shared/_RajyaSanikBoard.cshtml";
}

 @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {


    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 center-div">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 inner-content-div">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit Schemes</h3>
                    </div>
                <div class="panel-body rsb-form">
                    <div class="col-xs-6 col-sm-6 col-md-6 SchemeID">
                                <div class="form-group">
                                   <label>Scheme ID</label>
                                     @Html.TextBoxFor(m => m.Scheme_ID, new { @readonly="readonly" })
                                    @Html.HiddenFor(m =>m.Scheme_ID)
                                </div>

                     </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 SchemeID">
                                <div class="form-group">
                                   <label>Scheme Name:</label>
                                     @Html.EditorFor(model => model.Scheme_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    <small class="fg-red" style="color: red;">@Html.ValidationMessageFor(m =>m.Scheme_Name)</small>
                                </div>

                     </div>
                     <div class="col-xs-6 col-sm-6 col-md-6 SchemeID">
                                <div class="form-group">
                                    <label>Date of Published:</label>
                                     @Html.EditorFor(model => model.Date_of_Published, new { htmlAttributes = new { @class = "form-control" } })
                                    <small class="fg-red" style="color: red;">@Html.ValidationMessageFor(m =>m.Date_of_Published)</small>
                    
                                </div>
                      </div>

                         <div class="col-xs-6 col-sm-6 col-md-6 SchemeID">
                                <div class="form-group cus-active-checkbox">
                                    <label style="width: auto;">Active:</label>
                                         @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                    
                        </div>
                                    
                                <div class="form-group sub-btn">
                                  <input type="submit" value="Save" class="btn btn-default next-step" />
                                </div>

                            </div>
                    </div>
             
                
                </div>
            </div>
       
 }
    


              
 @* script for DOP *@
<script>
    $(document).ready(function () {
        var date_input = $('input[name="Date_of_Published"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        var options = {
            format: 'mm/dd/yyyy',
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })
</script>

<script type="text/javascript">
    $("#btnlogout").click(function (event) {
       
        $("#btnlogout").hide();
        event.preventDefault();
        var url = '@Url.Action("Logout", "Home")';
        window.location.href = url;

    });
</script>
